<div class='container'>
	<div class='row'>
		
		<div class='col-sm-8'>
			<h1>Add Your Restaurant</h1>

			<%= render 'form' %>

			<%= link_to 'Back', food_places_path, class: "btn btn-link" %>
		</div>
		<div class='col-sm-1'></div>
		<div class='col-sm-3 hidden-xs'>
		<h2>Recent Ad</h2>
			<% @food_places.in_groups_of(1) do |group| %>
    <div class="row">
      <% group.each do |food_place| %>
        <% if food_place %>
          <div class='col-md-12 clearfix main-text'>
          <div class="thumbnail">
          
           <%= image_tag food_place.image_url, class: 'img-responsive', style:"width:100%;height:180px" %>
           <div class='star-rating' data-score= <%= @avg_rating %> ></div>
           <p><%= pluralize("#{food_place.reviews.length}", "review")%></p> 
           <span><%= link_to food_place.name, food_place %></span>
           </div>
          </div>
        <% end %>
      <% end %>
    </div>
<% end %>
</div>

		</div>
	</div>
</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/foodplace/uploads/stars',
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');
    }
  });
</script>