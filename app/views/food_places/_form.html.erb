<%= form_for(@food_place, :html => {muultipart: true}) do |f| %>
  <% if @food_place.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@food_place.errors.count, "error") %> prohibited this food_place from being saved:</h4>

      <ul>
      <% @food_place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Plane44" %>
